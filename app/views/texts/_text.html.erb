<p>
  <%= text.entity %>
    <%= form_tag text_path(text.id), method: :patch, html: {class: "form-horizontal"} do %>
      <div class="form-group hidden">
        <div class=" col-md-11 col-lg-10">
          <%= text_area :text, :entity, class: "form-control", row: 1 %>
        </div>
        <div class="col-md-1 col-lg-2">
          <%= submit_tag "追加", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
</p> <br />
